<h1> Update <%= @item.name%>'s information</h1>

<%= form_with url: "/merchants/#{@item.id}/items/#{@item.id}", method: :patch, local: true do |f| %>
<%= f.label :Name %>
<%= f.text_field :name, value: @item.name %>
<%= f.label :Description %>
<%= f.text_field :description, value: @item.description %>
<%= f.label :price %>
<%= f.number_field :unit_price, value: @item.unit_price %>
<%= f.submit "Submit" %>
<% end %>