<h1>Admin Dashboard</h1>

<h3>Directing Links</h3>
<ul>
        <li> <%= link_to("Admin Merchants Index", admin_merchants_url) %></li>
        <li> <%= link_to("Admin Invoices Index", admin_invoices_url) %></li>
</ul>
<div class = "top_customers">
<h3>Top Customers</h3>
    <% @top_customers.each do |customer| %>
    <ul>
        <li>Customer: <%="#{customer.first_name} #{customer.last_name} "%> </li>
        <li>Successful Transactions: <%=" #{customer.count}" %>
        </li>
    </ul>

    <% end %>

</div>

<div class = "incomplete_invoices">
<h3>Incomplete Invoices</h3>
<% @incomplete.each do |invoice|  %>
    <ul>
        <li><a href = "/admin/invoices/<%= "#{invoice.id}"%>"> <%= invoice.id%> </a></li>
        <li>Created: <%= date_formatter(invoice.created_at)%></li>
    </ul>

    <% end %>

</div>
